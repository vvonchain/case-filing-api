root = true
[*]
end_of_line = crlf
charset = utf-8
insert_final_newline = true
indent_style = tab
trim_trailing_whitespace = true

; 4-column space indentation
[*.{cs,js,ts,html,cshtml,aspx}]
indent_style = tab
indent_size = 4
tab_width = 4

; 2-column tab indentation
[*.{xml,props,config,css,less}]
indent_style = tab
